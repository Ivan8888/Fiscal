@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<ClientMVC.Models.Customer>

<h1>Customers list</h1>

<table>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                Edit links
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(c => item.Name) 
                </td>
                <td>
                    @Html.DisplayFor(c => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(c => item.Email)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id= "@item.CustomerId">Edit</a>
                    @*@Html.ActionLink("Delete this customer", "Delete", new { id = item.CustomerId });*@
                    <a asp-action="Delete" asp-route-id="@item.CustomerId">Delete konacno</a>
                </td>
            </tr>
        }
    </tbody>
</table>

