@model List<FiscalClientMVC.ViewModels.EditUsersInRoleViewModel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditUsersInRole</title>
</head>
<body>
    <h1>Users in role: @ViewBag.RoleId;</h1>
    <br />
    <form asp-action="EditUsersInRole" method="post">
        @for(int i=0; i<Model.Count; i++)
        {
            <div>
                <input hidden asp-for="@Model[i].UserId" />
                <input hidden asp-for="@Model[i].UserName" />
                <input asp-for="@Model[i].isSelected" />
                <label asp-for="@Model[i].isSelected">@Model[i].UserName</label>
                <br />
            </div>
        }
        <input asp-route-roleId="@ViewBag.RoleId" type="submit" value="Proccess" />
        <br />
        <a asp-action="EditRole" asp-route-id="@ViewBag.RoleId">Cancel</a>
    </form>
</body>
</html>
